# .env.example
# This file serves as a template for the required environment variables.
# Copy this file to .env and fill in your actual values. DO NOT commit .env file.

# --- MySQL Database Configuration ---
MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=compressor_db
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DATABASE=compressor_db
DB_PORT=3306
# NEW: DB Pool Configuration
MYSQL_POOL_SIZE=10

# --- InfluxDB Configuration ---
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=your_influxdb_org
INFLUXDB_BUCKET=your_influxdb_bucket

# --- Kafka Configuration ---
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_DVR_GROUP_ID=dvr-group
KAFKA_CLUSTER_ID=
KAFKA_VALIDATED_TOPIC=sensors-validated

# --- Redis Configuration ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# --- Model Paths ---
STATUS_MODEL_PATH=artifacts/compressor_status_prediction_model.onnx
DART_MODEL_PATH=artifacts/dart_model.onnx
VIBRATION_MODEL_PATH=artifacts/farid_kaki_vibration_transformer.onnx
SCALER_MEAN_PATH=artifacts/scaler_mean.npy
SCALER_SCALE_PATH=artifacts/scaler_scale.npy